#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

bundle install

if [ ! -x "$(which jq)" ]; then
  echo -e "\n\033[0;33mPlease install jq: https://stedolan.github.io/jq/download/\033[0m"
  exit 1
fi

if [ ! -x "$(which minikube)" ]; then
  echo -e "\n\033[0;33mIf you're going to run the tests, please follow the minikube setup instructions for your operating system:\nhttps://kubernetes.io/docs/getting-started-guides/minikube/#installation\033[0m"
fi

if [ ! -x "$(which kubectl)" ]; then
  echo -e "\n\033[0;33mPlease install kubectl version 1.7.0 or higher:\nhttps://kubernetes.io/docs/user-guide/prereqs/\033[0m"
else
  KUBECTL_VERSION=$(kubectl version --short --client | grep -oe "v[[:digit:]\.]\+")
  echo -e "\n\033[0;32mKubectl version $KUBECTL_VERSION is already installed. This gem requires version v1.7.0 or greater.\033[0m"
fi
